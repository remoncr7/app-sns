<%= javascript_pack_tag 'posts/index' %>
<%= stylesheet_pack_tag 'posts/index' %>

<br>
<div class="container-fluid">
  <div class="row">
    <% if @posts.present? %>
      <% @posts.each do |post| %>
        <div class="aaa col-4 col-sm-3 " >
          <div class="aa">
            <a href= "/posts/<%= post.id %> ", class="element ">
              <tr>
                <td><%= image_tag post.img.url , class: 'img-fluid' %></td><br>
              </tr>
              <div class="texts">
                <span class="text user-name">
                  <tr>
                    <td><%= post.user.name %></td>
                  </tr>
                </span>
                <span class="text date">
                  <tr>
                    <td><%= post.created_at.strftime('%m/%d') %></td>
                  </tr>
                </span>
                <br>
                <span class="text title">
                  <tr>
                    <td><%= post.title %></td>
                  </tr>
                </span>
              </div>
            </a>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="bb">
  <a href="/new" class="post-btn">
    <div class="btn-chars">
      <div>投稿</div>
      <i class="fas fa-camera"></i>
    </div>
  </a>
</div>


