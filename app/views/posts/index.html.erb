

<% if user_signed_in? %> 
  <span>ログインに成功しました。 ようこそ！<strong><%= current_user.name %></strong>さん！</span>
<% end %>

<h1>概要</h1>
<p>説明文</p>


<a href="/new">投稿する</a>
<br>


<% if @posts.present? %>
  <% @posts.each do |post| %>
    <tr>
      <th><strong>タイトル：</strong></th>
      <td><%= post.title %></td><br>
    <tr>
      <td><%= image_tag post.img.url(:thumb ) if post.img? %></td><br>
    </tr>
    <tr>
      <th><strong>コメント：</strong></th>
      <td><%= post.text %></td><br>
    </tr>
    <tr>
      <th><strong>参考にした動画やレシピ：</strong></th>
      <td><%= post.url %></td><br>
    </tr>
    <tr>
      <th><strong>投稿日：</strong></th>
      <td><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></td><br>
    </tr>
  <% end %>
 <% end %>
