<%# <%= javascript_pack_tag 'posts/show' %> 
<%= stylesheet_pack_tag 'posts/index' %> 

<br>
<div class="container" >
  <div class="row"> 
    <div class="post">
      <div class="post__item">
        <div class= "post__info">
          <span class="post__text post__user-name">
            <tr>
              <td><%= @post.user.name %></td>
            </tr>
          </span>
          <span class="post__text post__date">
            <tr>
              <td><%= @post.created_at.strftime('%Y/%m/%d %H:%M') %></td><br>
            </tr>
          </span>
        </div>
        <span class= "post__img img-fluid">
          <tr>
            <td><%= image_tag @post.img.url(:thumb ) %></td><br>
          </tr>
        </span>
        <div class="post__texts">
          <span class="post__text post__title">
            <tr>
              <th><strong>タイトル：</strong></th>
              <td><%= @post.title %></td><br>
            </tr>
          </span>
          <span class="post__text post__comment">
            <tr>
              <th><strong>コメント：</strong></th>
              <td><%= @post.text %></td><br>
            </tr>
          </span>
          <span class="post__text post__url">
            <tr>
              <th><strong>参考にした動画やレシピ：</strong></th>
              <td><%= @post.url %></td><br>
            </tr>
          </span>
        </div>
      </div>
    </div>
  </div>
 </div>

<div class="post-btn">
  <a href="/new" class="post-btn__anchor">
    <div class="post-btn__chars">
      <div>投稿</div>
      <i class="fas fa-camera"></i>
    </div>
  </a>
</div>

 <a href="/">戻る</a>