<%# <%= javascript_pack_tag 'posts/index' %> 
<%= stylesheet_pack_tag 'posts/index' %>

<a href="/new">投稿する</a>
<br>
<div class="container-fluid">
  <div class="row">
    <% if @posts.present? %>
      <% @posts.each do |post| %>
        <div class="aaa col-4 col-sm-3" >
          <div class="aa">
            <div class="element">
              <td><%= image_tag post.img.url , class: 'img-fluid' %></td><br>
              <div class="texts">
                <span class="text title">
                  <tr>
                    <th><strong>タイトル：</strong></th>
                    <td><%= post.title %></td><br>
                  </tr>
                </span>
                <span class="text">
                  <tr>
                    <th><strong>コメント：</strong></th>
                    <td><%= post.text %></td><br>
                  </tr>
                </span>
                <span class="text">
                  <tr>
                    <th><strong>参考にした動画やレシピ：</strong></th>
                    <td><%= post.url %></td><br>
                  </tr>
                </span>
                <span class="text date">
                  <tr>
                    <th><strong>投稿日：</strong></th>
                    <td><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></td><br>
                  </tr>
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>