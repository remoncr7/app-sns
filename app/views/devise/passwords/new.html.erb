<%= stylesheet_pack_tag "devise/index" %>
<%= javascript_pack_tag "devise/index" %>

<div class="container">
  <div class="form">
    <h2>パスワード再設定の申請</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " ご登録されたメールアドレス" %>
      </div>
      <div class="form-group">
        <%= f.submit "再設定用のURLを送信する", class:"btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
