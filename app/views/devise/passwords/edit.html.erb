<%= stylesheet_pack_tag 'devise/index' %>
<%= javascript_pack_tag 'devise/index' %>

<div class="container">
  <div class="form">
    <h2>パスワード変更</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          <strong>(<%= @minimum_password_length %>文字以上)</strong><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "新しいパスワード" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "新しいパスワード（再入力）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.submit "パスワード変更", class:"btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
 </div>

