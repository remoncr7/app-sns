<%= stylesheet_pack_tag "devise/index" %>
<%= javascript_pack_tag "devise/index" %>


<div class="container">
  <div class="form">
    <h2>プロフィール編集</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :name %><strong>(15文字以内)</strong><br>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group">
        <strong>新しい</strong><%= f.label :password %> 
        <% if @minimum_password_length %>
          <strong>(<%= @minimum_password_length %>文字以上)</strong><br>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: " パスワードを変更する場合のみ入力" %>
      </div>
      <div class="form-group">
        <strong>新しい</strong><%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " パスワードを変更する場合のみ再入力" %>
      </div>
      <div class="form-group">
        <%= f.label :current_password %> <br>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
      <div class="form-group">
        <%= f.submit "更新", class:"btn" %>
      </div>
    <% end %>
    <p><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></p>
    <p><%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当にアカウントを削除しますか？" }, method: :delete %></p>
    <%= link_to "戻る", :back %>
  </div>
</div>
